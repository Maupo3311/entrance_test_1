{% extends 'base_admin.html.twig' %}

{% block content_header %}
    Authors
{% endblock %}

{% block content_buttons %}
    <a href="{{ path('author_create') }}" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-user-plus"></i> Add Author
    </a>
{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Middle Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for author in pagination %}
            <tr>
                <th scope="row">{{ author.id }}</th>
                <td>{{ author.firstName }}</td>
                <td>{{ author.middleName }}</td>
                <td>{{ author.lastName }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-eye"></i> Show
                    </a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="{{ path('author_delete', {'id': author.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="count">
        <span>Total count: {{ pagination.getTotalItemCount }}</span>
    </div>
    <br>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}