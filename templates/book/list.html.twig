{% extends 'base_admin.html.twig' %}

{% block content_header %}
    Books
{% endblock %}

{% block content_buttons %}
    <a href="{{ path('book_create') }}" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-user-plus"></i> Add Book
    </a>
{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Book title</th>
            <th scope="col">The year of publishing</th>
            <th scope="col">Number of pages</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in pagination %}
            <tr>
                <th scope="row">{{ book.id }}</th>
                <td>{{ book.name }}</td>
                <td>{{ book.year }}</td>
                <td>{{ book.numberOfPages }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-eye"></i> Show
                    </a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="{{ path('book_delete', {'id': book.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="count">
        <span>Total count: {{ pagination.getTotalItemCount }}</span>
    </div>
    <br>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}